FROM docker.io/bitnami/minideb:buster
LABEL maintainer "Bitnami <containers@bitnami.com>"

ENV HOME="/" \
    OS_ARCH="amd64" \
    OS_FLAVOUR="debian-10" \
    OS_NAME="linux"

COPY prebuildfs /
# Install required system packages and dependencies
RUN install_packages ca-certificates curl gzip procps tar wget
RUN wget -nc -P /tmp/bitnami/pkg/cache/ https://downloads.bitnami.com/files/stacksmith/wavefront-collector-1.2.1-0-linux-amd64-debian-10.tar.gz && \
    echo "2bdba0c6a22e9af458235ee31df6dbca9420730807d751637820f7b21a0ae978  /tmp/bitnami/pkg/cache/wavefront-collector-1.2.1-0-linux-amd64-debian-10.tar.gz" | sha256sum -c - && \
    tar -zxf /tmp/bitnami/pkg/cache/wavefront-collector-1.2.1-0-linux-amd64-debian-10.tar.gz -P --transform 's|^[^/]*/files|/opt/bitnami|' --wildcards '*/files' && \
    rm -rf /tmp/bitnami/pkg/cache/wavefront-collector-1.2.1-0-linux-amd64-debian-10.tar.gz
RUN apt-get update && apt-get upgrade -y && \
    rm -r /var/lib/apt/lists /var/cache/apt/archives
RUN chmod g+rwX /opt/bitnami

ENV BITNAMI_APP_NAME="wavefront-collector" \
    BITNAMI_IMAGE_VERSION="1.2.1-debian-10-r6" \
    PATH="/opt/bitnami/wavefront-collector/bin:$PATH"

USER 1001
ENTRYPOINT [ "wavefront-collector" ]
CMD [ "--help" ]
